<!-- <h1 class="center"><%= @post.title %></h1> -->
<div class="row">
  <!-- USER PROFILE  -->
    <section class="col s6 offset-s3 m3 offset-m1">
        <div class="card">
            <%= image_tag "avatar.png", class: "responsive-img" %>
            <div class="card-content teal white-text">
                <p>
                    Name:
                    <%= @user.first_name %>
                </p>
                <p>
                    Date joined:
                    <%= @user.created_at %>
                </p>
                <p>
                    Current city:
                    <%= @user.current_city %>
                </p>
            </div>
        </div>
    </section>

    <section class="row">
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= @post.title %></span>
              <p><%= @post.message %></p>

            </div>
          </div>
        </div>
      </section>
</div>
