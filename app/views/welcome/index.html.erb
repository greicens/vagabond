<div class="parallax-container">
    <h1 class="center-align" id="head">TrailBlazer</h1>
    <h2 class="center-align" id="blaze">What's Your Next Adventure?</h2>
    <div class="parallax">
        <%= image_tag "adventure.jpg" %>
    </div>
</div>
<div class="section white">
    <div class="row container">
        <h4>Explore cities and earn points!</h4>
        <h4>Challenge Your Friends and Compare Your Travels</h4>
        <%= render "welcome/landing_leaders" %>
                <!-- Promo Content 1 goes here -->
            </div>
        </div>
    </div>
</div>

<div class="parallax-container">
    <div class="parallax">
        <%= image_tag "cityscape.jpg" %>
    </div>
</div>
<div class="section white">
    <div class="row container">
        <div class="col s6 center">
            <h4 class="header">Blaze the Trail to Your Next Adventure</h4>
            <p><%= link_to "Sign Up Now", "#signup", class: "btn-large" %></p>
        </div>
        <div class="col s6 center">
            <h4 class="header">Rejoin Your Community of Travellers</h4>
            <p><%= link_to "Log In", "#login", class: "btn-large" %></p>
        </div>
    </div>
</div>
<div class="parallax-container last">
    <div class="parallax">
        <%= image_tag "cityscape4.jpg" %>
    </div>
</div>

<!-- Modal Login -->
<div id="login" class="modal">
    <%= render "forms/login" %>
</div>
<div id="signup" class="modal">
    <%= render "forms/signup" %>
</div>
