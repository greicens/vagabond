<div class="col m8 offset-m2 col s12 modal-content">
    <%= form_for @user  do |f| %>
    <div class="row">
        <div class="input-field col s6">
            <%= f.text_field :first_name %>
        </div>
        <div class="input-field col s6">
            <%= f.text_field :last_name %>
        </div>
    </div>

    <div class="row">
        <div class="input-field col s12">
            <%= f.text_field :email%>
        </div>
    </div>
    <div class="row">
        <div class="col s12">
            <div class="input-field inline">
                <%= f.text_field :current_city %>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col s12">
          Change Picture:
          <div class="input-field col s12">
            <%= f.file_field :photo %>
          </div>
        </div>
    </div>
    <div class="modal-footer">
      <div class="col s6">
        <%= f.submit "Submit", class:"btn light-blue darken-3" %>
      </div>
      <div class="col s6">
        <%= link_to "Delete Profile", @user, class: "btn red", method: :delete, data: {confirm: "Are you sure you want to delete your profile?"} %>
      </div>
    </div>
    <% end %>
</div>
