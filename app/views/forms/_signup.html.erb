<section class="row">
    <h5 class="center">Welcome to the adventure!</h5>


    <div class="col m8 offset-m2 col s12">
        <%= form_for @user  do |f| %>
        <div class="row">
            <div class="input-field col s6">
               <%= f.text_field :first_name, placeholder: "First Name", class:"validate" %>
            </div>
            <div class="input-field col s6">
                <%= f.text_field :last_name, placeholder: "Last Name" %>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s6">
                <%= f.text_field :email, placeholder: "Email", class:"validate", type:"email" %>
            </div>
            <div class="input-field col s6">
                <%= f.text_field :username, placeholder: "Username", class:"validate", type:"username" %>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <%= f.password_field :password, placeholder: "Password"%>
            </div>
            <div class="input-field s6">
                <%= f.text_field :current_city, placeholder: "Current City" %>
            </div>
        </div>
        <div class="row">
            <div class="col s6">
                <div class="input-field col s12">
                    <%= f.file_field :photo %>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <%= f.submit "Sign Up", class:"btn" %>
        </div>
    <% end %>
  </div>
</section>
