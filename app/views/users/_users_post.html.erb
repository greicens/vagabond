<% @user.posts.each do |post|  %>
<div class="card horizontal">
    <div class="card-stacked">
        <div class="card-content">
            <span class="card-title">
                <%= link_to "#{post.title}",user_post_path(@user, post)  %>
            </span>
            <p>
                <%= post.message %>
            </p>
        </div>
        <div class="card-action">
          <% if current_user == @user %>
            <%= link_to "Edit", post_path(@user, post), class:"btn" %>
            <%= link_to "Delete", delete_post_path(@user, post), :method => :delete, data: {confirm: "Are you sure you want to delete (#{post.title})?"}, class: "btn red" %>
            <% end %>
        </div>
    </div>
</div>
<% end %>
